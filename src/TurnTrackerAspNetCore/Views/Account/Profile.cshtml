@model TurnTrackerAspNetCore.ViewModels.Account.ProfileViewModel
@{
    ViewBag.Title = Model.User.UserName;

}
<h1>Profile <a class="btn btn-sm btn-warning" asp-action="Edit">Edit</a></h1>
<div class="form-horizontal">
    <div class="form-group">
        <label asp-for="User.UserName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">@Model.User.UserName</div>
    </div>
    <div class="form-group">
        <label asp-for="User.DisplayName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">@Model.User.DisplayName</div>
    </div>
    @*<div class="form-group">
        <label class="col-sm-2 control-label">Phone</label>
        <div class="col-sm-10">
            <span>@Model.User.PhoneNumber</span>
            @if (Model.User.PhoneNumberConfirmed)
            {
                <span class="glyphicon glyphicon-ok"></span>
                <span> Confirmed</span>
            }
        </div>
    </div>*@
    <div class="form-group">
        <label asp-for="User.Email" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <span>@Model.User.Email</span>
            @if (Model.User.EmailConfirmed)
            {
                <span class="glyphicon glyphicon-ok"></span>
                <span> Confirmed</span>
            }
        </div>
    </div>
    @if (Model.Roles.Count > 0)
    {
    <div class="form-group">
        <label class="col-sm-2 control-label">Roles</label>
        <div class="col-sm-10">
            <ul>
                @foreach (var role in Model.Roles)
                {
                    <li>@role</li>
                }
            </ul>
        </div>
    </div>
    }
</div>
