@model User
@{
    ViewBag.Title = Model.UserName;
}
<h1>Profile <a class="btn btn-sm btn-warning" asp-action="Edit">Edit</a></h1>
<div class="form-horizontal">
    <div class="form-group">
        <label asp-for="UserName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">@Model.UserName</div>
    </div>
    <div class="form-group">
        <label asp-for="DisplayName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">@Model.DisplayName</div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Phone</label>
        <div class="col-sm-10">
            <span>@Model.PhoneNumber</span>
            @if (Model.PhoneNumberConfirmed)
            {
                <span class="glyphicon glyphicon-ok"></span>
                <span> Confirmed</span>
            }
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <span>@Model.Email</span>
            @if (Model.EmailConfirmed)
            {
                <span class="glyphicon glyphicon-ok"></span>
                <span> Confirmed</span>
            }
        </div>
    </div>
</div>
