@using System.Threading.Tasks
@model TurnTrackerAspNetCore.ViewModels.Account.SendCodeViewModel
@{
    ViewData["Title"] = "Send Verification Code";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Account" asp-action="SendCode" asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-inline">
    <input asp-for="RememberMe" type="hidden" />
    <div class="form-group">
        Select Two-Factor Authentication Provider:
        <select asp-for="SelectedProvider" class="form-control" asp-items="Model.Providers"></select>
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>
