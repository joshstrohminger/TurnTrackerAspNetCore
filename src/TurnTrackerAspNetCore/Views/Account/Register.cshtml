@model RegisterUserViewModel

@{ ViewBag.Title = "Register";}

<h1>Register</h1>

<form method="post" asp-antiforgery="true" class="form-horizontal">
    <input asp-for="ReturnUrl" type="hidden"/>
    <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="UserName" class="col-sm-2"></label>
            <div class="col-sm-4">
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DisplayName"class="col-sm-2"></label>
            <div class="col-sm-4">
                <input asp-for="DisplayName" class="form-control"/>
            </div>
            <div class="col-sm-4">
                <span>Optional</span>
                <span asp-validation-for="DisplayName"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-sm-2"></label>
            <div class="col-sm-4">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-sm-2"></label>
            <div class="col-sm-4">
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2">
                <input class="btn btn-primary" type="submit" value="Register"/>
            </div>
        </div>
</form>