@model RegisterUserViewModel

@{ ViewBag.Title = "Register";}

<h1>Register</h1>

<form method="post" asp-antiforgery="true">
    <input asp-for="ReturnUrl" type="hidden"/>
    <div asp-validation-summary="ModelOnly"></div>
    <table>
        <tr>
            <td><label asp-for="UserName"></label></td>
            <td><input asp-for="UserName" /></td>
            <td><span asp-validation-for="UserName"></span></td>
        </tr>
        <tr>
            <td><label asp-for="DisplayName"></label></td>
            <td><input asp-for="DisplayName" /></td>
            <td>
                <span>Optional</span>
                <span asp-validation-for="DisplayName"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <td><input asp-for="Password" /></td>
            <td><span asp-validation-for="Password"></span></td>
        </tr>
        <tr>
            <td><label asp-for="ConfirmPassword"></label></td>
            <td><input asp-for="ConfirmPassword" /></td>
            <td><span asp-validation-for="ConfirmPassword"></span></td>
        </tr>
    </table>
    <input class="btn btn-primary" type="submit" value="Register"/>
</form>