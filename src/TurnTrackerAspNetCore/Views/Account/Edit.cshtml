@model EditAccountViewModel

@{ ViewBag.Title = "Edit Profile";}

<h1>Edit Profile</h1>

<form method="post" asp-antiforgery="true" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="UserName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">@Model.UserName</div>
    </div>
    <div class="form-group">
        <label asp-for="DisplayName" class="col-sm-2 control-label"></label>
        <div class="col-sm-4">
            <input asp-for="DisplayName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span>Optional</span>
            <span asp-validation-for="DisplayName"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-sm-2 control-label"></label>
        <div class="col-sm-4">
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span>Optional</span>
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 control-label"></label>
        <div class="col-sm-6">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span>Optional</span>
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2">
            <input class="btn btn-primary" type="submit" value="Save" />
            <a class="btn btn-danger" asp-action="Profile">Cancel</a>
        </div>
    </div>
</form>