@using System.Threading.Tasks
@model HomePageViewModel
@{ViewBag.Title = "Turn Tracker";}
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>@Model.Error
    </div>
}
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create Task</a>
    </p>
}
<h4>Tasks</h4>
@if (Model.TaskCounts.Count == 0)
{
    <p>No tasks</p>
}
else
{
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Team Based</th>
                <th>Period</th>
                <th>Next Turn</th>
                <th>Overdue</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var kvp in Model.TaskCounts)
        {
            @Html.Partial("_Task", kvp)
        }
    </table>
}