@model TrackedTask

<h1>@Model.Name</h1>
<div>@(Model.TeamBased ? "Team" : "Individual") Based</div>
<div>
    @if (Model.Period == 0m)
    {
        <span>Non-Periodic</span>
    }
    else
    {
        <span>@Model.Period @Model.Unit</span>
    }
</div>
<div>
    <span>Modified </span>
    <span>@Model.Modified.ToLocalTime()</span>
    <span> - </span>
    <span>Created </span>
    <span>@Model.Created.ToLocalTime()</span>
</div>
<h4>Turns</h4>
<table>
    @foreach (var turn in Model.Turns ?? new List<Turn>())
    {
        <tr>
            <td>@turn.Id</td>
            <td>@turn.Taken.ToLocalTime()</td>
            <td>@turn.Modified.ToLocalTime()</td>
            <td>@turn.Created.ToLocalTime()</td>
        </tr>
    }
</table>
<form asp-antiforgery="true" asp-action="TakeTurn" method="post">
    <input asp-for="Id" type="hidden"/>
    <input type="submit" value="Take Turn"/>
</form>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <form asp-antiforgery="true" asp-action="DeleteTask" method="post">
        <input asp-for="Id" type="hidden"/>
        <input type="submit" value="Delete"/>
    </form>
    <a asp-action="Index">Home</a>
</div>