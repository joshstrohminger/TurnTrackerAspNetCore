@model HomePageViewModel
@{ViewBag.Title = "Turn Tracker";}
@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>@Model.Error
    </div>
}
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create Task</a>
    </p>
}
<h4>Tasks</h4>
@if (Model.Tasks.Count == 0)
{
    <p>No tasks</p>
}
else
{
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>TeamBased</th>
                <th>Period</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Name</td>
                <td>@task.TeamBased</td>
                <td>@(task.Period == 0m ? $"Non-Periodic" : $"{task.Period} {task.Unit}")</td>
                <td><a class="btn btn-default btn-xs" asp-action="Details" asp-route-id="@task.Id">Details</a></td>
            </tr>
        }
    </table>
}